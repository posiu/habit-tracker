<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-900">Profile</h1>
        <%= link_to 'Edit Profile', edit_users_profile_path, 
            class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      </div>
    </div>
    
    <div class="px-6 py-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700">First Name</label>
          <p class="mt-1 text-sm text-gray-900"><%= @user.first_name || 'Not set' %></p>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700">Last Name</label>
          <p class="mt-1 text-sm text-gray-900"><%= @user.last_name || 'Not set' %></p>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700">Email</label>
          <p class="mt-1 text-sm text-gray-900"><%= @user.email %></p>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700">Time Zone</label>
          <p class="mt-1 text-sm text-gray-900"><%= @user.time_zone %></p>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700">Language</label>
          <p class="mt-1 text-sm text-gray-900"><%= @user.locale %></p>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700">Email Notifications</label>
          <p class="mt-1 text-sm text-gray-900">
            <%= @user.email_notifications_enabled? ? 'Enabled' : 'Disabled' %>
          </p>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700">Reminder Time</label>
          <p class="mt-1 text-sm text-gray-900">
            <%= @user.reminder_time&.strftime('%H:%M') || 'Not set' %>
          </p>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700">Member Since</label>
          <p class="mt-1 text-sm text-gray-900">
            <%= @user.created_at.strftime('%B %d, %Y') %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
