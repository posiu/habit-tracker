<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Edit Profile</h1>
    </div>
    
    <div class="px-6 py-4">
      <%= form_with model: @user, url: users_profile_path, method: :patch, local: true, 
                    class: 'space-y-6' do |form| %>
        
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :first_name, class: 'block text-sm font-medium text-gray-700' %>
            <%= form.text_field :first_name, 
                class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500' %>
          </div>
          
          <div>
            <%= form.label :last_name, class: 'block text-sm font-medium text-gray-700' %>
            <%= form.text_field :last_name, 
                class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500' %>
          </div>
          
          <div>
            <%= form.label :time_zone, class: 'block text-sm font-medium text-gray-700' %>
            <%= form.time_zone_select :time_zone, nil, { include_blank: 'Select timezone' },
                class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500' %>
          </div>
          
          <div>
            <%= form.label :locale, class: 'block text-sm font-medium text-gray-700' %>
            <%= form.select :locale, 
                options_for_select([['English', 'en'], ['Polski', 'pl']], @user.locale),
                { include_blank: 'Select language' },
                class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500' %>
          </div>
          
          <div>
            <%= form.label :reminder_time, class: 'block text-sm font-medium text-gray-700' %>
            <%= form.time_field :reminder_time, 
                class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500' %>
          </div>
          
          <div class="flex items-center">
            <%= form.check_box :email_notifications_enabled, 
                class: 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded' %>
            <%= form.label :email_notifications_enabled, 'Enable email notifications', 
                class: 'ml-2 block text-sm text-gray-900' %>
          </div>
        </div>
        
        <div class="flex justify-end space-x-3">
          <%= link_to 'Cancel', users_profile_path, 
              class: 'bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded' %>
          <%= form.submit 'Update Profile', 
              class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
