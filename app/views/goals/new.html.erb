<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Create New Goal</h1>
      <p class="mt-1 text-sm text-gray-600">
        Set a new goal to achieve your objectives.
      </p>
    </div>
    
    <div class="p-6">
      <%= form_with(model: @goal, local: true, class: "space-y-6") do |form| %>
        <% if @goal.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  There were <%= pluralize(@goal.errors.count, "error") %> with your submission:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @goal.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" %>
          </div>

          <div>
            <%= form.label :category_id, "Category", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :category_id, 
                options_from_collection_for_select(current_user.categories, :id, :name, @goal.category_id), 
                { prompt: "Select a category" },
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" } %>
          </div>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :goal_type, "Goal Type", class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :goal_type, 
              options_for_select([
                ['Target Value', 'target_value'],
                ['Days Doing', 'days_doing'],
                ['Days Without', 'days_without'],
                ['Target Date', 'target_date']
              ], @goal.goal_type),
              { prompt: "Select goal type" },
              { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" } %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :start_date, class: "block text-sm font-medium text-gray-700" %>
            <%= form.date_field :start_date, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" %>
          </div>

          <div>
            <%= form.label :target_date, class: "block text-sm font-medium text-gray-700" %>
            <%= form.date_field :target_date, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm" %>
          </div>
        </div>

        <div class="flex items-center">
          <%= form.check_box :is_active, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
          <%= form.label :is_active, "Active", class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", goals_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
          <%= form.submit "Create Goal", class: "bg-green-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
