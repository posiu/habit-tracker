<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Account Settings</h1>
    </div>
    
    <div class="px-6 py-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
                    html: { method: :put }, class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :first_name, autocomplete: "given-name",
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          
          <div>
            <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :last_name, autocomplete: "family-name",
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p class="mt-1 text-sm text-yellow-600">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
          </div>
          
          <div>
            <%= f.label :time_zone, class: "block text-sm font-medium text-gray-700" %>
            <%= f.time_zone_select :time_zone, nil, { include_blank: 'Select timezone' },
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          
          <div>
            <%= f.label :locale, 'Language', class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :locale, 
                options_for_select([['English', 'en'], ['Polski', 'pl']], resource.locale),
                { include_blank: 'Select language' },
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          
          <div>
            <%= f.label :reminder_time, class: "block text-sm font-medium text-gray-700" %>
            <%= f.time_field :reminder_time, 
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>
        
        <div class="flex items-center">
          <%= f.check_box :email_notifications_enabled, 
              class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= f.label :email_notifications_enabled, 'Enable email notifications', 
              class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Change Password</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
              <p class="text-xs text-gray-500">Leave blank if you don't want to change it</p>
              <%= f.password_field :password, autocomplete: "new-password",
                  class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
              <% if @minimum_password_length %>
                <p class="mt-1 text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</p>
              <% end %>
            </div>

            <div>
              <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
            </div>
          </div>
          
          <div class="mt-4">
            <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
            <p class="text-xs text-gray-500">We need your current password to confirm your changes</p>
            <%= f.password_field :current_password, autocomplete: "current-password",
                class: "mt-1 block w-full max-w-xs border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>

        <div class="flex justify-between items-center">
          <div>
            <%= button_to "Delete Account", registration_path(resource_name), 
                data: { confirm: "Are you sure? This action cannot be undone." }, 
                method: :delete,
                class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded text-sm" %>
          </div>
          
          <div class="flex space-x-3">
            <%= link_to "Cancel", users_profile_path, 
                class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
            <%= f.submit "Update Account", 
                class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>