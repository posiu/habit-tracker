<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">
        Welcome back, <%= @user.first_name %>! ðŸ‘‹
      </h1>
      <p class="mt-2 text-gray-600">
        Here's your habit tracking overview for today.
      </p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Habits Card -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <span class="text-white font-bold">H</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  Active Habits
                </dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @habits_count %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Goals Card -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                <span class="text-white font-bold">G</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  Active Goals
                </dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @goals_count %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Categories Card -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
                <span class="text-white font-bold">C</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  Categories
                </dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @categories_count %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Current Streak Card -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-orange-500 rounded-full flex items-center justify-center">
                <span class="text-white font-bold">ðŸ”¥</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  Current Streak
                </dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @current_streak %> days
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Activity Heatmap -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Activity Overview</h2>
        <p class="mt-1 text-sm text-gray-600">Your habit tracking activity over the past year</p>
      </div>
      <div class="p-6">
        <div class="heatmap-container">
          <div class="heatmap-grid">
            <% @heatmap_data.each do |day_data| %>
              <div class="heatmap-day level-<%= day_data[:level] %>" 
                   title="<%= day_data[:date] %>: <%= day_data[:count] %> activities"
                   data-date="<%= day_data[:date] %>"
                   data-count="<%= day_data[:count] %>">
              </div>
            <% end %>
          </div>
          <div class="heatmap-legend mt-4 flex items-center justify-end space-x-2">
            <span class="text-xs text-gray-500">Less</span>
            <div class="heatmap-day level-0"></div>
            <div class="heatmap-day level-1"></div>
            <div class="heatmap-day level-2"></div>
            <div class="heatmap-day level-3"></div>
            <div class="heatmap-day level-4"></div>
            <span class="text-xs text-gray-500">More</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Daily Entries Summary -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Daily Entries</h2>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          <div class="text-center">
            <div class="text-2xl font-bold text-blue-600"><%= @total_entries %></div>
            <div class="text-sm text-gray-500">Total Entries</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-green-600"><%= @this_month_entries %></div>
            <div class="text-sm text-gray-500">This Month</div>
          </div>
          <div class="text-center">
            <% if @today_entry %>
              <div class="text-2xl font-bold text-green-600">âœ“</div>
              <div class="text-sm text-gray-500">Today's Entry</div>
            <% else %>
              <div class="text-2xl font-bold text-gray-400">-</div>
              <div class="text-sm text-gray-500">No Entry Today</div>
            <% end %>
          </div>
        </div>

        <% if @today_entry %>
          <div class="bg-green-50 border border-green-200 rounded-md p-4 mb-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-green-800">Today's entry completed!</h3>
                <div class="mt-2 text-sm text-green-700">
                  <p>
                    Mood: <%= @today_entry.mood ? case @today_entry.mood
                                                   when 5 then 'ðŸ˜„ Great'
                                                   when 4 then 'ðŸ˜Š Good'
                                                   when 3 then 'ðŸ˜ Okay'
                                                   when 2 then 'ðŸ˜” Not Great'
                                                   when 1 then 'ðŸ˜ž Poor'
                                                   end : 'Not set' %>
                    <% if @today_entry.notes.present? %>
                      â€¢ <%= truncate(@today_entry.notes, length: 50) %>
                    <% end %>
                  </p>
                </div>
                <div class="mt-3">
                  <%= link_to "View Entry", @today_entry, class: "text-green-800 font-medium hover:text-green-600" %>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4 mb-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-yellow-800">No entry for today yet</h3>
                <div class="mt-2 text-sm text-yellow-700">
                  <p>Don't forget to log your daily entry to track your progress!</p>
                </div>
                <div class="mt-3">
                  <%= link_to "Log Today's Entry", new_daily_entry_path, class: "text-yellow-800 font-medium hover:text-yellow-600" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <% if @recent_entries.any? %>
          <div>
            <h3 class="text-sm font-medium text-gray-900 mb-3">Recent Entries</h3>
            <div class="space-y-2">
              <% @recent_entries.each do |entry| %>
                <div class="flex justify-between items-center py-2 px-3 bg-gray-50 rounded">
                  <div class="flex items-center space-x-3">
                    <span class="text-sm font-medium text-gray-900">
                      <%= entry.entry_date.strftime("%b %d") %>
                    </span>
                    <% if entry.mood %>
                      <span class="text-sm">
                        <%= case entry.mood
                            when 5 then 'ðŸ˜„'
                            when 4 then 'ðŸ˜Š'
                            when 3 then 'ðŸ˜'
                            when 2 then 'ðŸ˜”'
                            when 1 then 'ðŸ˜ž'
                            end %>
                      </span>
                    <% end %>
                  </div>
                  <%= link_to "View", entry, class: "text-sm text-purple-600 hover:text-purple-500" %>
                </div>
              <% end %>
            </div>
            <% if @has_more_entries %>
              <div class="mt-4 text-center">
                <%= link_to "View All Entries", daily_entries_path, class: "text-sm text-purple-600 hover:text-purple-500 font-medium" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Quick Actions</h2>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <%= link_to new_habit_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add New Habit
          <% end %>

          <%= link_to new_goal_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Create Goal
          <% end %>

          <%= link_to new_daily_entry_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" do %>
            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Log Today's Entry
          <% end %>
        </div>
      </div>
    </div>

    <!-- Placeholder for Future Features -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Coming Soon</h2>
      </div>
      <div class="p-6">
        <div class="text-center py-8">
          <div class="text-gray-400 mb-4">
            <svg class="mx-auto h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">GitHub-style Heatmap</h3>
          <p class="text-gray-600 mb-4">
            Visual representation of your daily habit tracking progress will appear here in Stage 4.
          </p>
          <div class="grid grid-cols-7 gap-1 max-w-md mx-auto">
            <% 49.times do |i| %>
              <div class="w-3 h-3 bg-gray-100 rounded-sm"></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
