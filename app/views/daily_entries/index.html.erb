<div class="max-w-7xl mx-auto">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Daily Entries</h1>
      <p class="mt-2 text-sm text-gray-700">
        Review your daily mood and progress entries.
      </p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to "New Entry", new_daily_entry_path, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-purple-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 sm:w-auto" %>
    </div>
  </div>

  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <% if @daily_entries.any? %>
            <table class="min-w-full divide-y divide-gray-300">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Date</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Mood</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Notes</th>
                  <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @daily_entries.each do |entry| %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      <%= entry.entry_date.strftime("%B %d, %Y") %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <% if entry.mood %>
                        <% mood_emoji = case entry.mood
                             when 5 then 'ðŸ˜„ Great'
                             when 4 then 'ðŸ˜Š Good'
                             when 3 then 'ðŸ˜ Okay'
                             when 2 then 'ðŸ˜” Not Great'
                             when 1 then 'ðŸ˜ž Poor'
                             else 'Not set'
                             end %>
                        <%= mood_emoji %>
                      <% else %>
                        <span class="text-gray-400">Not set</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500">
                      <% if entry.notes.present? %>
                        <%= truncate(entry.notes, length: 50) %>
                      <% else %>
                        <span class="text-gray-400">No notes</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <%= link_to "View", entry, class: "text-purple-600 hover:text-purple-900 mr-3" %>
                      <%= link_to "Edit", edit_daily_entry_path(entry), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                      <%= link_to "Delete", entry, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No daily entries</h3>
              <p class="mt-1 text-sm text-gray-500">Get started by logging your first daily entry.</p>
              <div class="mt-6">
                <%= link_to "New Entry", new_daily_entry_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
