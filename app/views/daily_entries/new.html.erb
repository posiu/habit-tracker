<div class="max-w-4xl mx-auto">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Log Today's Entry</h1>
      <p class="mt-1 text-sm text-gray-600">
        Track your habits and goals for <%= Date.current.strftime("%B %d, %Y") %>.
      </p>
    </div>
    
    <div class="p-6">
    <%= form_with(model: @daily_entry_form, url: daily_entries_path, local: true, class: "space-y-6") do |form| %>
      <% if @daily_entry_form.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                There were <%= pluralize(@daily_entry_form.errors.count, "error") %> with your submission:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @daily_entry_form.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :entry_date, class: "block text-sm font-medium text-gray-700" %>
            <%= form.date_field :entry_date, value: Date.current, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-purple-500 focus:border-purple-500 sm:text-sm" %>
          </div>

          <div>
            <%= form.label :mood, class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :mood, 
                options_for_select(@daily_entry_form.mood_options, @daily_entry_form.mood),
                { prompt: "How are you feeling today?" },
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-purple-500 focus:border-purple-500 sm:text-sm" } %>
          </div>
        </div>

        <div>
          <%= form.label :notes, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :notes, rows: 4, placeholder: "How was your day? Any thoughts or reflections...", class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-purple-500 focus:border-purple-500 sm:text-sm" %>
        </div>

        <!-- Placeholder for habit tracking -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Habit Tracking</h3>
          <div class="bg-gray-50 rounded-lg p-4">
            <p class="text-sm text-gray-600 text-center">
              Habit tracking will be available after creating some habits.
              <br>
              <%= link_to "Create your first habit", new_habit_path, class: "text-purple-600 hover:text-purple-500 font-medium" %>
            </p>
          </div>
        </div>

        <!-- Placeholder for goal tracking -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Goal Progress</h3>
          <div class="bg-gray-50 rounded-lg p-4">
            <p class="text-sm text-gray-600 text-center">
              Goal tracking will be available after creating some goals.
              <br>
              <%= link_to "Create your first goal", new_goal_path, class: "text-purple-600 hover:text-purple-500 font-medium" %>
            </p>
          </div>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", daily_entries_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" %>
          <%= form.submit "Save Entry", class: "bg-purple-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
