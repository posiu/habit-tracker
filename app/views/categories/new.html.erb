<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Create New Category</h1>
      <p class="mt-1 text-sm text-gray-600">
        Organize your habits and goals by creating categories.
      </p>
    </div>
    
    <div class="p-6">
      <%= form_with(model: @category_form, url: categories_path, local: true, class: "space-y-6") do |form| %>
        <% if @category_form.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  There were <%= pluralize(@category_form.errors.count, "error") %> with your submission:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @category_form.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-purple-500 focus:border-purple-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-purple-500 focus:border-purple-500 sm:text-sm" %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :color, class: "block text-sm font-medium text-gray-700" %>
            <%= form.color_field :color, class: "mt-1 block w-full h-10 border-gray-300 rounded-md shadow-sm focus:ring-purple-500 focus:border-purple-500" %>
            <p class="mt-1 text-xs text-gray-500">Choose a color to represent this category</p>
          </div>

          <div>
            <%= form.label :position, class: "block text-sm font-medium text-gray-700" %>
            <%= form.number_field :position, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-purple-500 focus:border-purple-500 sm:text-sm" %>
            <p class="mt-1 text-xs text-gray-500">Display order (leave blank for automatic)</p>
          </div>
        </div>

        <div class="flex items-center">
          <%= form.check_box :is_active, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
          <%= form.label :is_active, "Active", class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", categories_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" %>
          <%= form.submit "Create Category", class: "bg-purple-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>